{
    "compilerOptions": {
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "lib": [
            "ES2022",
            "DOM"
        ],
        "target": "ES2017",
        "forceConsistentCasingInFileNames": true,
        "isolatedModules": true,
        "allowImportingTsExtensions": true,
        "strict": true
    },
    "exclude": [
        "node_modules",
        "dist",
        "测试",
        "**/node_modules/*",
        "src/**/*.spec.{ts|js}",
        "src/**/*.测试.{ts|js}"
    ]
}