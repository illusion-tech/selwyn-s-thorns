{
    "compilerOptions": {
        "module": "ESNext",
        "moduleResolution": "Node",
        "target": "ES2017",
        "forceConsistentCasingInFileNames": true,
        "isolatedModules": true,
        "strict": true,
        "checkJs": true
    },
    "exclude": [
        "node_modules",
        "dist",
        "**/node_modules/*",
        "src/**/*.spec.{ts|js}"
    ]
}